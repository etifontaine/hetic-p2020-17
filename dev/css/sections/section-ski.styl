.ski
  &::before, &::after
    content ''
    position absolute
    z-index 20
    top 0
    left 0
    width 100%
    height 100%
    transform-origin 50% 100%
  &::before
    transition transform .5s .75s ease-in-out
    background $primary-color-darker
  &::after
    transition transform .5s .75s ease-in-out
    background $white
  &.section--fade-in
    &::before
      transform translateY(100%)
    &::after
      transform translateY(150%)
