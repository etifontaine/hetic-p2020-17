//Page header
.header
  position fixed 
  z-index 100
  top 0
  left 0
  width 100%
  height 80px
  display flex
  justify-content space-between
  flex-wrap wrap
  @media (min-width $laptop)
    transform translateY(30px)
  &-toggle
    width 80px
    height 80px
    display flex
    flex-direction column
    justify-content center
    align-items center
    cursor pointer
    span
      display block
      width 30px
      height 3px
      background $grey
      transform-origin 50% 50%
      transition transform .3s $cubic, opacity .2s $cubic, background .2s $cubic
      border-radius $radius
      margin 0
      &:nth-child(1)
        transform translateY(-7px)
      &:nth-child(2)
        transform translateY(0px)
      &:nth-child(3)
        transform translateY(7px)
    @media (min-width $laptop)
      display none
  &-logo
    width 200px
    height 80px
    display flex
    svg
      width 140px
      margin auto
      path
        fill $grey
        transition fill .2s $cubic
    @media (min-width $laptop)
      margin-left 10vw
  &-nav
    position absolute
    z-index -1
    top 0
    left 0
    width 100%
    height 100vh
    padding-top 140px
    flex-shrink 0
    background rgba($black, 75%)
    transform translateX(-100%)
    transition transform .5s $cubic
    ul
      list-style none
      padding 0
      margin 0
      button
        width 100%
        height calc((100vh - 200px) / 4)
        color $white
        font-family $main-font
        font-weight 600
        text-transform capitalize
        text-align center
        font-size(20px)
        cursor pointer
        &:active
          background rgba($black, 10%)
    @media (min-width $laptop)
      height 80px
      display inline-block
      width auto
      top 0
      right 10vw
      padding 0
      background none      
      transform translateX(0)
      ul
        height 80px
        display flex
        flex-direction row
        justify-content flex-end
        li
          margin 0 1vw          
          button
            color $grey
            height 40px
            margin-top 20px
            font-weight 400
            padding 0 2vw
            font-size(16px)
            position relative
            &::after
              content ""
              position absolute
              bottom 0
              left 0
              width 60px
              height 2px
              background $primary-color-border
              transform-origin 0 50%
              transition transform .3s $cubic
              transform scaleX(0)
            &:active
              background none 
              color $black
            &.active
              &::after
                transform scaleX(1)
  &.header--show
    @media (max-width ($laptop - 1))
      .header-logo 
        svg
          path
            fill $white
      .header-nav
        transform translateX(0)
      .header-toggle
        span
          background $white
          &:nth-child(1)
            transform translateY(3px) rotate(45deg)
          &:nth-child(2)
            opacity 0
          &:nth-child(3)
            transform translateY(-3px) rotate(-45deg)