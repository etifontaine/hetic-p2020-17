body
  margin: 0
  padding: 0
  border: 0
  color: $black
  font-size: $font-size-base
  font-family: $font-main
  line-height: normal
  background $white

.section
  width 100%
  height 100vh
  max-width 1200px
  margin auto

.title
  display flex
  align-items flex-end
  flex-direction column
  h2
    margin-right 10px
    margin-bottom 0
    font-size(30px)
  &-legend
    margin-top 0
    display flex
    align-items center
    &-text
      margin: 0
      font-size(16px)
      margin-right 10px
      color $grey-light
      font-weight 700
    &-line
      height 5px
      width 40vw
      background-color $blue-sky