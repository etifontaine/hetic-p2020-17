body
  margin: 0
  padding: 0
  border: 0
  color: $black
  font-size: $font-size-base
  font-family: $font-main
  line-height: normal
  background $white
  overflow hidden
  user-select none

.container
  width 100%
  height auto
  transition transform .85s ease-in-out

.section
  position relative
  width 100%
  height 100vh
  overflow hidden