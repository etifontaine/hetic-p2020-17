$font-main = "OpenSans", sans-serif
$font-title = "FuturaLT", sans-serif

// Base
// html tag to make 1em equal 10px
$font-size-base = 16px


// body tag
$font-family-base = $main-font

// add your custom font-face here
$radius = 4px

// Colors
$primary-color = #C7E1F3
$primary-color-darker =#96C0FF
$white = #FFFFFF
$black = #232323
$grey  = #3E3E3E


// Media queries
$s-mobile = 414px
$mobile   = 767px
$tablet   = 768px
$laptop   = 1024px
$large    = 1280px
$x-large  = 1400px

// Animations
$cubic = cubic-bezier(0.62, 0.28, 0.23, 0.99)