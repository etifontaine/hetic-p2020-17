doctype html
html(lang='fr')
    style(type="text/css").
        .loader {
            width: 100vw;
            height: 100vh;
            background: white;
            position: fixed; 
            z-index: 200;
        }
        .loader__container {
            display: flex;
            position: relative;
            width: 100%;
            height: 100%;
        }
        .loader__container img {
            position: absolute; 
            top: calc(50% - 75px);
            right: 0;
            left: 0; 
            bottom: 0;
            width: 150px;
            margin: 0 auto;
        }
        .loader-2 {
            clip-path: inset(100% 0 0 0);
        }


    include includes/head.pug
    body
        include includes/loader.pug

        include includes/header.pug
        include includes/grid.pug
        main.container
            include includes/sections/landing
            include includes/sections/ski
            include includes/sections/performance
            include includes/sections/travel
            include includes/sections/creation
    // inject:js
    // endinject