.animate
  transition transform .55s ease-in-out

.travel__container
  height 100%
  position relative
  overflow hidden
  
  &--ms-touch
    overflow-x scroll
    overflow-y hidden

    -ms-overflow-style none
    /* Hides the scrollbar. */

    -ms-scroll-chaining none
    /* Prevents Metro from swiping to the next tab or app. */

    -ms-scroll-snap-type mandatory
    /* Forces a snap scroll behavior on your images. */

    -ms-scroll-snap-points-x snapInterval(0%, 100%)
    /* Defines the y and x intervals to snap to when scrolling. */

.travel__mountain
  max-height 200%
  min-width 200%
  position absolute
  top -40%
  will-change transform
  pointer-events none

.travel__cards
  overflow-y hidden
  width 300%
  height 100%
  display flex
  position absolute
  bottom 0
  left 0
  justify-content space-around
  align-items flex-end
  will-change transform
  background linear-gradient(0deg, rgba($white, 100%) 1%, rgba($white, 0%) 100%)
  &--desktop
    align-items center
    background linear-gradient(0deg, rgba($white, 100%) 1%, rgba($white, 20%) 100%)
  @media (min-width $tablet)
    align-items center
    background linear-gradient(0deg, rgba($white, 100%) 1%, rgba($white, 20%) 100%)

.travel__card
  width 30%
  padding 25px
  margin-bottom 90px
  background rgba(255, 255, 255, .8)
  border-radius 2px
  display flex
  flex-direction column
  transition all .55s ease-in-out
  @media (min-width $tablet)
    width 20%
    margin-bottom 0
  .card__title
    font-size 6vh
    line-height 1.15
    font-family $font-extra
    font-weight 400
    color $black
    text-transform capitalize
    margin 10px 0 10px 0
  .card__text
    padding 0
    margin 10px 0 10px 0
    font-size 16px
    line-height 1.6
    color lighten($black, 10%)
    flex 1
    display flex
  &--desktop
    background none
    padding 0 25px
    transform translate(0, 20px)
    opacity 0
    .card__text
      transition all 1.1s ease-in-out
      opacity 0
    &--active
      transform translate(0, 0)
      opacity 1
      .card__text
        opacity 1
  &--mobile
    will-change transform
    animation swipe 7s 3s ease-in-out infinite

