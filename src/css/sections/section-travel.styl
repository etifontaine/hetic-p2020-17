.animate
  transition transform .3s ease-in-out

.travel__container
  height 100%
  position relative
  overflow hidden
  
  &--ms-touch
    overflow-x scroll
    overflow-y hidden

    -ms-overflow-style none
    /* Hides the scrollbar. */

    -ms-scroll-chaining none
    /* Prevents Metro from swiping to the next tab or app. */

    -ms-scroll-snap-type mandatory
    /* Forces a snap scroll behavior on your images. */

    -ms-scroll-snap-points-x snapInterval(0%, 100%)
    /* Defines the y and x intervals to snap to when scrolling. */

.travel__mountain
  height 120%
  position absolute
  bottom 0
  will-change transform
  pointer-events none

.travel__cards
  overflow-y hidden
  width 300%
  display flex
  position absolute
  bottom 0
  left 0
  justify-content space-around
  will-change transform

.travel__card
  width 30%
  padding 25px
  margin-bottom 40px
  background rgba(255, 255, 255, .8)
  border-radius 2px
  display flex
  flex-direction column
  align-items center
  @media (min-width $tablet)
    width 20%
  .card__title
    font-size 6vh
    line-height 1.15
    font-family $font-extra
    font-weight 400
    color $black
    text-transform capitalize
    margin 10px 0 10px 0
  .card__text
    padding 0
    margin 10px 0 10px 0
    font-size 16px
    line-height 1.6
    color lighten($black, 10%)
    flex 1
    display flex
    align-items center
  &--desktop
    background none
    padding 0 25px
    text-align center
    .card__title
      color $white
    .card__text
      color darken($white, 10%)

.travel__controllers
  .controllers
    width 100px
    height 40px
    background $primary-color-darker
    position absolute
    bottom 0
    border-radius 2px
    font-size 12px
    color #fff
    text-transform uppercase
    @media (min-width $tablet)
      bottom 40px
  .controllers__prev
    left 30px
  .controllers__next
    right 30px