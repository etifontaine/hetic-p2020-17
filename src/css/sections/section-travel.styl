  .controllers
    width 60px;
    position absolute
    bottom 0
    cursor pointer
    transition all .2s ease-in-out
    transform translate(0, -50%) scale(.8)
    &:hover
      transform translate(0, -50%) scale(1)
    @media (min-width $tablet)
      top 50%
  .controllers__prev
    left 10%
  .controllers__next
    right 10%
  .next
    opacity 0
    pointer-events none
    transition all .3s ease-in-out
  &--start
    .controllers__prev
      opacity 0
      pointer-events none
  &--end
    .controllers__next
      opacity 0
      pointer-events none
    .next
      opacity 1
      pointer-events inherit
  &--mobile
    .controllers
      display none