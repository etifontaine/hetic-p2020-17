  .controllers
    position absolute
    bottom 0
    cursor pointer
    overflow visible
    transition all .3s ease-in-out
    polygon
      transition all 0.5s cubic-bezier(.2, 1, .3, 1)
    &:hover polygon
      transition all 1s cubic-bezier(.2, 1, .3, 1)
    &:hover .arrow
      animation arrow-anim 2.5s cubic-bezier(.2, 1, .3, 1) infinite
    &:hover .arrow-fixed
      animation: arrow-fixed-anim 2.5s cubic-bezier(.2, 1, .3, 1) infinite
    @media (min-width $tablet)
      top 50%
      transform translate(0, -50%)
  .controllers__prev
    left 10%
    transform scale(-1, 1)
    @media (min-width $tablet)
      transform scale(-1, 1) translate(0, -50%)
  .controllers__next
    right 10%
  .next
    opacity 0
    pointer-events none
    transition all .3s ease-in-out
  &--start
    .controllers__prev
      opacity 0
      pointer-events none
  &--end
    .controllers__next
      opacity 0
      pointer-events none
    .next
      opacity 1
      pointer-events inherit
  &--mobile
    .controllers
      display none

@keyframes swipe
  0%
    transform translate(0, 0) rotate(0)
  5%
    transform translate(-5px, 0) rotate(-1deg)
  10%
    transform translate(0, 0) rotate(0)
  100%
    transform translate(0, 0) rotate(0)

@keyframes arrow-anim
  0%
    opacity 1
    transform translateX(0)
  5%
    transform translateX(-0.1rem)
  100%
    transform translateX(1rem)
    opacity 0

@keyframes arrow-fixed-anim
  5%
    opacity 0
  20%
    opacity 0.4
  100%
    opacity 1