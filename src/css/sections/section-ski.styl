/**
* Fade in transition
*/
.ski.section--fade-in
  &::before
    transition transform .5s .65s $cubic
    transform translateY(100%)
  &::after
    transition transform .5s .65s $cubic
    transform translateY(150%)
  .ski__background
    img
      transition transform .85s .6s $cubic
      transform scale(1.15)
    &::after
      transition-delay .75s
      transform scaleX(1)
  .about__title
    transition transform .4s .6s $cubic
    transform translateX(0)
    &::after
      transition-delay 1s
      transform scaleX(0)
  .about__text
    transition transform .4s .8s $cubic
    transform translateX(0)
    &::after
      transition-delay 1.2s
      transform scaleX(0)
