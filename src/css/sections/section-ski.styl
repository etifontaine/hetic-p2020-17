.ski
  display flex
  flex-direction row
  flex-wrap nowrap
  &::before, &::after
    content ''
    position absolute
    z-index 20
    top 0
    left 0
    width 100%
    height 100%
    transform-origin 50% 100%
    transition transform .75s .1s $cubic
  &::before
    background $primary-color-darker
  &::after
    background $white
  &__section-background
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    @media (min-width $mobile)
      flex-shrink 0
      width 50vw
      height 100vh
      overflow hidden
    &::after
      content ""
      position absolute
      z-index -1
      bottom 0
      left 0
      width 100%
      height 70%
      background linear-gradient(180deg, rgba(0,0,0, 0%) 0%, rgba(0,0,0, 70%) 50%, rgba(0,0,0, 90%) 100%)
      @media (min-width $mobile)
        display none
   img
      position relative
      z-index -2
      flex-shrink 1
      height 100%
      width auto
      margin auto      
      transition transform .5s 0s $cubic
  &__section-about
    width 100%
    height 100%
    position absolute
    display flex
    flex-direction column
    justify-content flex-end
    padding 0 10vw
    padding-bottom 10vw
    @media (min-width $mobile)
      flex-shrink 0
      position relative
      width 50vw
      padding 10vw
      overflow hidden
  &__section-video
    width 100vw
    height 100vh
    background #000
    transition transform .65s $cubic
    flex-shrink 0
    &::after
      content ""
      position absolute
      z-index 10
      top 0
      left 100%
      width 50%
      height 100%
      transition transform .45s $cubic
      background red    
    &--visible
      transform translateX(-100%)
      &::after
        transform translateX(-50%) scaleX(0)

.about
  &__title
    position relative
    padding 0
    margin 0    
    text-align left
    font-size 6vh
    line-height 1.15
    font-family $font-extra
    font-weight 400
    color $white
    text-transform capitalize
    transform translateX(-20vw)
    transition transform .45s ease-in-out
    @media (min-width $mobile)
      color $black
    &::after
      content ""
      position absolute
      width 70%
      height 105%
      top -5%
      left -5%
      background $white
      transform-origin 100% 50%
      transition transform .65s $cubic
      @media (min-width $mobile)      
        background $primary-color-darker
  &__text
    width 100%
    padding 0
    margin 20px 0 30px 0
    font-size 16px
    line-height 1.6
    color darken($white, 10%)
    font $main-font
    transition transform .45s ease-in-out
    transform translateX(-20vw)
    @media (min-width $mobile)
      color lighten($black, 30%)
      font-size 17px
      line-height 1.7
      margin 5vh 0
    &::after
      content ""
      position absolute
      width 110%
      height 100%
      top 0
      left -5%
      background $white
      transform-origin 100% 50%
      transition transform .65s $cubic
      @media (min-width $mobile)      
        background $primary-color-darker
  &__button
    width 200px
    height 50px
    line-height 50px
    text-align center
    background $primary-color-darker
    font-size 16px
    color $white
    text-transform uppercase
    font-weight 500
    border-radius 2px
    &:active
      background darken($primary-color-darker, 15%)
  
.video
  position relative
  .next:hover
    .next__button
      background $white
      color $black
  .next__button
      color $white
      border-color $white
  .next__svg-line
    stroke $white  
    
    
  
/**
* Fade in transition
*/
.ski.section--fade-in
  &::before
    transition transform .5s .65s $cubic
    transform translateY(100%)
  &::after
    transition transform .5s .65s $cubic
    transform translateY(150%)
  .ski__background
    img
      transition transform .85s .6s $cubic
      transform scale(1.15)
    &::after
      transition-delay .75s
      transform scaleX(1)
  .about__title
    transition transform .4s .6s $cubic
    transform translateX(0)
    &::after
      transition-delay 1s
      transform scaleX(0)
  .about__text
    transition transform .4s .8s $cubic
    transform translateX(0)
    &::after
      transition-delay 1.2s
      transform scaleX(0)
