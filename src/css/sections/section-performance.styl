/**
* fade in transition
*/
.performance.section--fade-in
  .performance__transition-item
    transform scaleY(0)
    &:nth-child(1)
      transition-delay .4s
    &:nth-child(2)
      transition-delay .5s      
    &:nth-child(3)
      transition-delay .6s      
    &:nth-child(4)
      transition-delay .7s    
    &:nth-child(5)
      transition-delay .8s      
    &:nth-child(6)
      transition-delay .9s      
    
