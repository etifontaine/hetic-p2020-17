  &__text
    width 100%
    padding 0
    margin 20px 0 30px 0
    font-size 16px
    line-height 1.6
    color lighten($black, 10%)
    font $main-font
    transition transform .45s ease-in-out
    @media (min-width $mobile)
      color lighten($black, 30%)
      font-size 17px
      line-height 1.7
      margin 5vh 0
