@keyframes mute-bar 
  0%
    transform scaleY(1)
  50%
    transform scaleY(.3)
  100%
    transform scaleY(1)

@keyframes toggle-effect
  0%
    transform scale(1)
    opacity 1
  100%
    transform scale(1.4)
    opacity 0

@keyframes swipe
  0%
    transform translate(0, 0) rotate(0)
  5%
    transform translate(-5px, 0) rotate(-1deg)
  10%
    transform translate(0, 0) rotate(0)
  100%
    transform translate(0, 0) rotate(0)