.grid
  width 100%
  height 100%
  position fixed
  z-index -1
  top 0
  left 0
  display flex
  flex-direction row
  pointer-events none
  &__bar
    width 1px
    height 100vh
    background rgba($black, 10%)
    margin 0 auto
    &:nth-child(1), &:nth-child(2)
      display none
    @media (min-width $laptop)
      &.grid__bar:nth-child(1)
        display block
      &.grid__bar:nth-child(2)
        display block        
