//Page header
.header
  position fixed 
  z-index 100
  top 0
  left 0
  width 100%
  height 80px
  display flex
  justify-content space-between
  flex-wrap wrap
  transition transform .3s $cubic
  &::before
    content ""
    width 100%
    height 100%
    position absolute
    z-index -1
    top 0
    left 0
    background $white
    transition transform .3s $cubic    
    transform translateY(-130%)
  @media (min-width $laptop)
    transform translateY(30%)
  &__toggle
    width 80px
    height 80px
    display flex
    flex-direction column
    justify-content center
    align-items center
    cursor pointer
    span
      display block
      width 30px
      height 3px
      background $black
      transform-origin 50% 50%
      transition transform .3s $cubic, opacity .2s $cubic, background .2s $cubic
      border-radius $radius
      margin 0
      &:nth-child(1)
        transform translateY(-7px)
      &:nth-child(2)
        transform translateY(0px)
      &:nth-child(3)
        transform translateY(7px)
    @media (min-width $laptop)
      display none
  &__logo
    width 200px
    height 80px
    display flex
    svg
      width 140px
      margin auto
      path
        fill $black
        transition fill .2s $cubic
    @media (min-width $laptop)
      margin-left 10vw
  &__nav
    position absolute
    z-index -1
    top -10vmax
    left -10vmax
    width 40px
    height 40px
    padding-top 140px
    flex-shrink 0
    background rgba($black, 75%)
    transition all .5s $cubic
    overflow hidden
    border-radius 100%
    ul
      list-style none
      padding 0
      margin 10vmax
      width 100vw
      height calc(100vh - 140px)
      button
        width 100%
        height calc((100vh - 200px) / 4)
        color $white
        font-family $font-main
        font-weight 600
        text-transform capitalize
        text-align center
        font-size(20px)
        cursor pointer
        &:active
          background rgba($black, 10%)
    @media (min-width $laptop)
      height 80px
      display inline-block
      width auto
      top 0
      right 10vw
      left 0
      padding 0
      margin 0
      background none
      ul
        width 100%
        height 80px
        margin 0
        display flex
        flex-direction row
        justify-content flex-end
        li
          margin 0 1vw          
          button
            color $grey
            height 40px
            margin-top 20px
            font-weight 400
            padding 0 2vw
            font-size(16px)
            position relative
            &::after
              content ""
              position absolute
              z-index -1
              bottom 0
              left 0
              width 50%
              height 100%
              background $primary-color-darker
              transform-origin 0 50%
              transition transform .3s $cubic
              transform scaleX(0)
            &:active
              background none 
              color $black
            &.header__item--active
              &::after
                transform scaleX(1)

  &.header--show
    @media (max-width ($laptop))
      .header__logo 
        svg
          path
            fill $white
      .header__nav
        transform translateX(0)
        width 120vmax
        height 120vmax
        border-radius 0%
      .header__toggle
        span
          background $white
          &:nth-child(1)
            transform translateY(3px) rotate(45deg)
          &:nth-child(2)
            opacity 0
          &:nth-child(3)
            transform translateY(-3px) rotate(-45deg)

  &.header__background
    transform translate(0)
    &::before
      transform translateY(0%)
      box-shadow 0 1px 5px rgba(0,0,0,.1)